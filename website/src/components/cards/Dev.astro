---
// props
export interface Props {
  name: string;
  pos: string;
  content: string;
  avatar: string;
  contact?: number;
  github?: string;
}
const {
  name,
  pos,
  avatar = "/logo.svg",
  contact,
  github,
  content = "Hii",
} = Astro.props;

// icons
import IconDiscord from "../../icons/Discord.astro";
import IconGithub from "../../icons/Github.astro";
---

<figure
  class="min-w-[90%] md:px-5 md:mx-4 md:min-w-full ease-in-out delay-50 transition hover:scale-90 hover:rotate-[3deg] bg-transparent mx-5 border border-white/30 rounded-xl p-8"
>
  <img
    class="w-24 h-24 border border-indigo-600 rounded-full mx-auto"
    src={avatar}
    alt={name + " Pic"}
    width="384"
    height="512"
  />
  <div class="pt-6 text-center space-y-4">
    <blockquote>
      <p class="text-md md:text-lg font-medium">
        "{content}"
      </p>
    </blockquote>
    <figcaption class="font-medium">
      <div class="text-indigo-500">
        {name}
      </div>
      <div class="text-slate-500">
        {pos}
      </div>
      <div class="mt-3 w-full">
        <div class="flex gap-x-4 justify-center">
          {
            contact && (
              <div>
                <a
                  href={`https://discord.com/users/${contact}`}
                  target="_blank"
                  class="p-1 fill-white/95 block rounded-full bg-transparent border-2 border-indigo-700 hover:bg-indigo-600 transition ease-in-out"
                >
                  <p class="h-6 w-6">
                    <IconDiscord />
                  </p>
                </a>
              </div>
            )
          }

          {
            github && (
              <div>
                <a
                  href={`https://github.com/${github}`}
                  target="_blank"
                  class="p-1 fill-white/95 block rounded-full bg-transparent border-2 border-indigo-700 hover:bg-indigo-600 transition ease-in-out"
                >
                  <p class="h-6 w-6">
                    <IconGithub />
                  </p>
                </a>
              </div>
            )
          }
        </div>
      </div>
    </figcaption>
  </div>
</figure>
